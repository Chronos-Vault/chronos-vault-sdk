{
  "name": "@chronos-vault/sdk",
  "version": "1.1.0",
  "description": "Official SDK for Chronos Vault and Trinity Protocol - Multi-chain consensus verification across Arbitrum, Solana, and TON",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./trinity": {
      "import": "./dist/trinity/index.mjs",
      "require": "./dist/trinity/index.js",
      "types": "./dist/trinity/index.d.ts"
    },
    "./htlc": {
      "import": "./dist/htlc/index.mjs",
      "require": "./dist/htlc/index.js",
      "types": "./dist/htlc/index.d.ts"
    },
    "./vault": {
      "import": "./dist/vault/index.mjs",
      "require": "./dist/vault/index.js",
      "types": "./dist/vault/index.d.ts"
    },
    "./bridge": {
      "import": "./dist/bridge/index.mjs",
      "require": "./dist/bridge/index.js",
      "types": "./dist/bridge/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "build:watch": "tsup src/index.ts --format cjs,esm --dts --watch",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "chronos-vault",
    "trinity-protocol",
    "multi-chain",
    "blockchain",
    "ethereum",
    "solana",
    "ton",
    "arbitrum",
    "htlc",
    "atomic-swap",
    "defi",
    "vault",
    "consensus",
    "web3"
  ],
  "author": "Chronos Vault Team <chronosvault@chronosvault.org>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Chronos-Vault/chronos-vault-sdk.git"
  },
  "homepage": "https://chronosvault.org",
  "bugs": {
    "url": "https://github.com/Chronos-Vault/chronos-vault-sdk/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "ethers": "^6.9.0",
    "@solana/web3.js": "^1.87.0",
    "@ton/core": "^0.56.0",
    "@ton/ton": "^13.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "ethers": ">=6.0.0"
  }
}
